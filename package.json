{
  "name": "voice-assistant-arm",
  "version": "1.0.0",
  "description": "Voice Assistant for ARM devices (BTT Pi, Orange Pi)",
  "main": "dist/app/main/electron.js",
  "scripts": {
    "start": "ts-node app/main/electron.ts",
    "start:window": "cross-env WINDOW_MODE=true ts-node app/main/electron.ts",
    "dev": "concurrently \"tsc -w\" \"wait-on dist/app/main/electron.js && electron dist/app/main/electron.js\"",
    "dev:window": "cross-env WINDOW_MODE=true concurrently \"tsc -w\" \"wait-on dist/app/main/electron.js && electron dist/app/main/electron.js\"",
    "build": "tsc && npm run build:ui",
    "build:ui": "vite build",
    "copy-ui": "mkdir -p dist/app/ui && cp -r app/ui/* dist/app/ui/ 2>/dev/null || xcopy /E /I /Y app\\ui dist\\app\\ui 2>nul || true",
    "electron": "electron dist/app/main/electron.js",
    "electron:window": "cross-env WINDOW_MODE=true electron dist/app/main/electron.js",
    "rebuild": "electron-builder install-app-deps",
    "dist": "npm run build && electron-builder",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:linux:arm64": "npm run build && electron-builder --linux --arm64",
    "dist:linux:x64": "npm run build && electron-builder --linux --x64",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:mac:arm64": "npm run build && electron-builder --mac --arm64",
    "dist:mac:x64": "npm run build && electron-builder --mac --x64",
    "dist:win": "npm run build && electron-builder --win",
    "dist:win:x64": "npm run build && electron-builder --win --x64",
    "dist:win:ia32": "npm run build && electron-builder --win --ia32",
    "dist:all": "npm run build && electron-builder --mac --win --linux",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "check": "npm run lint && npm run format:check && npm run build"
  },
  "keywords": [
    "voice-assistant",
    "electron",
    "arm",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/form-data": "^2.5.0",
    "@types/node": "^20.19.25",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/three": "^0.181.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.18.0",
    "@mui/material": "^5.15.0",
    "@reduxjs/toolkit": "^2.10.1",
    "express": "^4.18.2",
    "form-data": "^4.0.0",
    "react": "^18.2.0",
    "react-chat-elements": "^12.0.11",
    "react-dom": "^18.2.0",
    "react-redux": "^9.2.0",
    "react-swipeable": "^7.0.1",
    "three": "^0.181.2"
  },
  "build": {
    "appId": "com.voiceassistant.app",
    "productName": "Voice Assistant",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "app/ui/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "Utility",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
