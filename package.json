{
  "name": "@assistant/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Voice Assistant monorepo (desktop, backend, landing, mobile)",
  "workspaces": [
    "apps/desktop",
    "apps/backend-main",
    "apps/landing",
    "apps/mobile",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:desktop",
    "dev:desktop": "npm run dev --workspace @assistant/desktop",
    "dev:desktop:window": "npm run dev:window --workspace @assistant/desktop",
    "dev:backend-main": "npm run dev --workspace @assistant/backend-main",
    "dev:landing": "npm run dev --workspace @assistant/landing",
    "dev:mobile": "npm run dev --workspace @assistant/mobile",
    "build": "npm run build:desktop",
    "build:desktop": "npm run build --workspace @assistant/desktop",
    "build:backend-main": "npm run build --workspace @assistant/backend-main",
    "build:landing": "npm run build --workspace @assistant/landing",
    "build:mobile": "npm run build --workspace @assistant/mobile",
    "test": "npm run test --workspace @assistant/desktop",
    "lint": "npm run lint:desktop && npm run lint:backend-main",
    "lint:desktop": "npm run lint --workspace @assistant/desktop",
    "lint:backend-main": "npm run lint --workspace @assistant/backend-main",
    "format": "npm run format:desktop && npm run format:backend-main",
    "format:desktop": "npm run format --workspace @assistant/desktop",
    "format:backend-main": "npm run format --workspace @assistant/backend-main",
    "check": "npm run check --workspace @assistant/desktop",
    "typecheck": "npm run typecheck:desktop && npm run typecheck:backend-main",
    "typecheck:desktop": "npm run typecheck --workspace @assistant/desktop",
    "typecheck:backend-main": "npm run typecheck --workspace @assistant/backend-main",
    "setup:mongodb": "npm run setup:mongodb --workspace @assistant/backend-main",
    "run:all": "npm run run:all --workspace @assistant/desktop && npm run run:all --workspace @assistant/backend-main",
    "prepare": "npm run prepare --workspace @assistant/desktop && npm run prepare --workspace @assistant/backend-main"
  }
}
