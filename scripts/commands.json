{
  "scripts": {
    "start": "electron dist/main/electron.js",
    "start:window": "cross-env WINDOW_MODE=true electron dist/main/electron.js",
    "dev": "ts-node main/electron.ts",
    "dev:window": "cross-env WINDOW_MODE=true ts-node main/electron.ts",
    "dev:watch": "concurrently \"tsc -w\" \"wait-on dist/main/electron.js && electron dist/main/electron.js\"",
    "build": "tsc && npm run build:ui && npm run copy:assets",
    "build:ui": "vite build",
    "build:backend-main": "cd backend-main && npm run build",
    "build:all": "npm run build:backend-main && npm run build",
    "copy:assets": "mkdir -p dist/ui-electron/assets/models && cp -r ui-electron/public/assets/* dist/ui-electron/assets/ 2>/dev/null || true",
    "copy-ui": "mkdir -p dist/ui-electron && cp -r ui-electron/* dist/ui-electron/ 2>/dev/null || xcopy /E /I /Y ui-electron dist\\ui-electron 2>nul || true",
    "setup:mongodb": "ts-node scripts/setup-mongodb.ts",
    "setup:mongodb:auto": "ts-node scripts/setup-mongodb.ts --auto",
    "start:backend-main": "cd backend-main && npm start",
    "dev:backend-main": "cd backend-main && npm run dev",
    "run:all": "npm run setup:mongodb:auto && npm run build:all && concurrently --names \"backend-main,electron\" --prefix-colors \"blue,magenta\" --kill-others-on-fail=false --handle-input=true \"npm run start:backend-main\" \"wait-on http://localhost:3001/health -t 30000 && cross-env WINDOW_MODE=true electron dist/main/electron.js\"",
    "electron": "electron dist/main/electron.js",
    "electron:window": "cross-env WINDOW_MODE=true electron dist/main/electron.js",
    "rebuild": "electron-builder install-app-deps",
    "dist": "npm run build && electron-builder",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:linux:arm64": "npm run build && electron-builder --linux --arm64",
    "dist:linux:x64": "npm run build && electron-builder --linux --x64",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:mac:arm64": "npm run build && electron-builder --mac --arm64",
    "dist:mac:x64": "npm run build && electron-builder --mac --x64",
    "dist:win": "npm run build && electron-builder --win",
    "dist:win:x64": "npm run build && electron-builder --win --x64",
    "dist:win:ia32": "npm run build && electron-builder --win --ia32",
    "dist:all": "npm run build && electron-builder --mac --win --linux",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "typecheck": "tsc --noEmit",
    "check": "npm run lint && npm run format:check && npm run typecheck",
    "prepare": "husky"
  }
}
