{
  "name": "@assistant/desktop",
  "version": "1.0.0",
  "description": "Voice Assistant",
  "private": true,
  "main": "dist/main/electron.js",
  "scripts": {
    "start": "electron dist/main/electron.js",
    "start:window": "cross-env WINDOW_MODE=true electron dist/main/electron.js",
    "start:backend-main": "npm run start --workspace @assistant/backend-main",
    "dev": "cross-env NODE_ENV=development UI_DEV_SERVER_URL=http://localhost:3000 concurrently --kill-others-on-fail --names \"ui,main\" --prefix-colors \"cyan,magenta\" \"npm:dev:ui\" \"npm:dev:watch\"",
    "dev:window": "cross-env WINDOW_MODE=true npm run dev",
    "dev:backend-main": "npm run dev --workspace @assistant/backend-main",
    "dev:ui": "cross-env NODE_ENV=development vite dev",
    "dev:electron": "wait-on dist/main/electron.js http://localhost:3000 && cross-env NODE_ENV=development electron dist/main/electron.js",
    "dev:watch": "concurrently --kill-others-on-fail --names \"tsc,electron\" --prefix-colors \"yellow,magenta\" \"tsc -w\" \"npm:dev:electron\"",
    "setup:mongodb": "npm run setup:mongodb --workspace @assistant/backend-main",
    "setup:mongodb:auto": "npm run setup:mongodb:auto --workspace @assistant/backend-main",
    "build": "tsc && npm run build:ui && npm run copy:assets",
    "build:ui": "vite build",
    "build:backend-main": "npm run build --workspace @assistant/backend-main",
    "build:all": "npm run build:backend-main && npm run build",
    "copy:assets": "mkdir -p dist/ui-electron/assets/models && cp -r ui-electron/public/assets/* dist/ui-electron/assets/ 2>/dev/null || true",
    "copy-ui": "mkdir -p dist/ui-electron && cp -r ui-electron/* dist/ui-electron/ 2>/dev/null || xcopy /E /I /Y ui-electron dist\\ui-electron 2>nul || true",
    "run:all": "npm run setup:mongodb:auto && npm run build:all && concurrently --names \"backend-main,electron\" --prefix-colors \"blue,magenta\" --kill-others-on-fail=false --handle-input=true \"npm run start:backend-main\" \"wait-on http://localhost:3001/health -t 30000 && cross-env WINDOW_MODE=true electron dist/main/electron.js\"",
    "rebuild": "electron-builder install-app-deps",
    "dist": "npm run build && electron-builder",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:linux:arm64": "npm run build && electron-builder --linux --arm64",
    "dist:linux:x64": "npm run build && electron-builder --linux --x64",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:mac:arm64": "npm run build && electron-builder --mac --arm64",
    "dist:mac:x64": "npm run build && electron-builder --mac --x64",
    "dist:win": "npm run build && electron-builder --win",
    "dist:win:x64": "npm run build && electron-builder --win --x64",
    "dist:win:ia32": "npm run build && electron-builder --win --ia32",
    "dist:all": "npm run build && electron-builder --mac --win --linux",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "typecheck": "tsc --noEmit",
    "check": "npm run lint && npm run format:check && npm run typecheck",
    "test": "playwright test",
    "test:visual": "playwright test",
    "test:visual:update": "playwright test --update-snapshots",
    "test:visual:ui": "playwright test --ui",
    "test:unit": "echo 'Unit tests not yet implemented'",
    "test:integration": "echo 'Integration tests not yet implemented'",
    "test:e2e": "echo 'E2E tests not yet implemented'",
    "prepare": "husky && node scripts/load-scripts.js"
  },
  "keywords": [
    "voice-assistant",
    "electron",
    "arm",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/express": "^4.17.21",
    "@types/form-data": "^2.5.0",
    "@types/node": "^20.19.25",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/three": "^0.181.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@assistant/shared": "file:../../packages/shared",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@hookform/resolvers": "^3.10.0",
    "@mui/icons-material": "^5.18.0",
    "@mui/material": "^5.15.0",
    "@reduxjs/toolkit": "^2.10.1",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "date-fns": "^4.1.0",
    "emoji-picker-react": "^4.9.3",
    "express": "^4.18.2",
    "form-data": "^4.0.0",
    "i18next": "^25.6.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "react": "^18.2.0",
    "react-chat-elements": "^12.0.11",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.67.0",
    "react-i18next": "^16.3.5",
    "react-markdown": "^10.1.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.9.6",
    "react-simple-keyboard": "^3.8.137",
    "react-swipeable": "^7.0.1",
    "react-syntax-highlighter": "^16.1.0",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "three": "^0.181.2",
    "zod": "^3.25.76"
  },
  "build": {
    "appId": "com.voiceassistant.app",
    "productName": "Voice Assistant",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "ui-electron/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "Utility",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
